---
import { type ISocialShare } from 'contracts/socialShare';

interface Props extends ISocialShare {}

const { title, via } = Astro.props;
const url = Astro.props.url ?? Astro.request.url;

let linkUrl = `https://twitter.com/intent/tweet?url=${url}`;

if (title) linkUrl += `&text=${title}`;
if (via) linkUrl += `&via=${via}`;
---

<a class="social-share-btn" title={title} target="_blank" href={linkUrl} rel="noopener noreferrer">
  <slot>
    <style lang="scss">
      svg {
        &:hover {
          fill: #ffffff;
        }
        path {
          transition: 250ms fill ease-in-out;
        }
      }
    </style>
    <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <title>X</title>
      <path
        d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
      ></path>
    </svg>
  </slot>
</a>
