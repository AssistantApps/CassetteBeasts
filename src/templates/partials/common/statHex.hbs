<svg viewBox="0 0 250 250" xmlns="http://www.w3.org/2000/svg">
    <defs>
        <filter id="shadow">
            <feDropShadow dx="0" dy="0" stdDeviation="0.2" flood-opacity="0.5" />
        </filter>
    </defs>
    <g color="black" transform="translate(25, 25)">
        <polygon points="100,100 14,50 100,0" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />
        <polygon points="100,100 14,50 14,150" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />
        <polygon points="100,100 14,150 100,200" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />
        <polygon points="100,100 100,200 186,150" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />
        <polygon points="100,100 186,50 186,150" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />
        <polygon points="100,100 186,50 100,0" fill="{{@root.theme.statHexBackground}}"
            stroke="{{@root.theme.gameCardBackground}}" />

        <g>
            <animate attributeName="opacity" dur="500ms" from="0" to="1" />
            <text y="-12" text-anchor="middle" font-size="10px">
                <tspan x="100">{{ lookup @root.translate 'SHORT_NAME_max_hp' }}</tspan>
                <tspan x="100" dy="10px">{{max_hp}}</tspan>
            </text>
            <text y="45" text-anchor="middle" font-size="10px">
                <tspan x="0">{{ lookup @root.translate 'SHORT_NAME_ranged_attack' }}</tspan>
                <tspan x="0" dy="10px">{{ranged_attack}}</tspan>
            </text>
            <text y="160" text-anchor="middle" font-size="10px">
                <tspan x="0">{{ lookup @root.translate 'SHORT_NAME_ranged_defense' }}</tspan>
                <tspan x="0" dy="10px">{{ranged_defense}}</tspan>
            </text>
            <text y="210" text-anchor="middle" font-size="10px">
                <tspan x="100">{{ lookup @root.translate 'SHORT_NAME_speed' }}</tspan>
                <tspan x="100" dy="10px">{{speed}}</tspan>
            </text>
            <text y="160" text-anchor="middle" font-size="10px">
                <tspan x="200">{{ lookup @root.translate 'SHORT_NAME_melee_defense' }}</tspan>
                <tspan x="200" dy="10px">{{melee_defense}}</tspan>
            </text>
            <text y="45" text-anchor="middle" font-size="10px">
                <tspan x="200">{{ lookup @root.translate 'SHORT_NAME_melee_attack' }}</tspan>
                <tspan x="200" dy="10px">{{melee_attack}}</tspan>
            </text>
        </g>

        <polygon points="{{statcoord max_hp 'max_hp'}} 
        {{statcoord ranged_attack 'ranged_attack' }} 
        {{statcoord ranged_defense 'ranged_defense' }} 
        {{statcoord speed 'speed' }} 
        {{statcoord melee_defense 'melee_defense' }}
        {{statcoord melee_attack 'melee_attack' }}" fill="{{@root.theme.brandTertiary}}"
            stroke="{{@root.theme.brandPrimary}}" stroke-width="2px" opacity="0.75">
            <animate attributeName="points" dur="1s" from="100,100 100,100 100,100 100,100 100,100 100,100" to="{{statcoord max_hp 'max_hp'}} 
        {{statcoord ranged_attack 'ranged_attack' }} 
        {{statcoord ranged_defense 'ranged_defense' }} 
        {{statcoord speed 'speed' }} 
        {{statcoord melee_defense 'melee_defense' }}
        {{statcoord melee_attack 'melee_attack' }}" />
        </polygon>
    </g>
</svg>