    <polygon points="0,160 160,0 1200,0 1200,500 1050,627 0,627" fill="#000000" stroke="#000000" />
  </g>
  <g transform="translate(10, -10)">
    <polygon points="0,160 160,0 1200,0 1200,500 1050,627 0,627" fill="{{theme.gameCardBackground}}"
      stroke="{{theme.gameCardBackground}}" />
